---
import { Image } from 'astro:assets';
import astroLogo from '../assets/astro.svg';
import background from '../assets/background.svg';
import LogoHilo from '../assets/hilogo.png'
---

<div id="container">
	
	<main>
		<section id="hero">
			<Image src={LogoHilo}  alt="Hilo Estudio" class="max-w-4xl w-full mt-40 md:mt-0" />
			
		</section>
	</main>

	
</div>

<style>
	body {
		@apply bg-gradient-to-b to-[#edebc6] from-[#83361b];
	}

	#container {
		font-family: Inter, Roboto, 'Helvetica Neue', 'Arial Nova', 'Nimbus Sans', Arial, sans-serif;
		height: 100%;
	}

	main {
		height: 100%;
		display: flex;
		justify-content: center;
	}

	#hero {
		display: flex;
		align-items: start;
		flex-direction: column;
		justify-content: center;
		padding: 16px;
	}

</style>
